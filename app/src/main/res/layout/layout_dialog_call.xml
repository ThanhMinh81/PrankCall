<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="480dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent">


        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:background="@drawable/background_border_radius"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_marginTop="7dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:gravity="center"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_name_default"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCallMicro"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="2dp"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_call" />

                <ImageView
                    android:id="@+id/imgVideoCall"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:elevation="2dp"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_callvideo" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_closeCall"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top|right"
            android:translationX="-13dp"
            android:translationY="8dp"
            android:background="@drawable/bg_circle_close"
            android:clickable="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close" />


    </FrameLayout>

</RelativeLayout>